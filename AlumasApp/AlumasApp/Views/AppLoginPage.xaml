<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlumasApp.Views.AppLoginPage"
               Shell.NavBarIsVisible="False"
  NavigationPage.HasNavigationBar="False"
   BackgroundImageSource="FondoAlumas"
  BackgroundColor="Gainsboro">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50,25" >

            <Entry x:Name="TxtUserName" Placeholder="Digite un Correo" FontSize="30" Keyboard="Email" TextColor="#0C0A0A"/>

            <Entry x:Name="TxtPassword" Placeholder="Digite Contraseña" FontSize="30" 
                   Keyboard="Default" IsPassword="True" />

            <Switch x:Name="SwShowPassword" IsToggled="False" />

            <Button x:Name="BtnLogin" Text="INGRESAR" BackgroundColor="DarkGreen" CornerRadius="15" Clicked="BtnLogin_Clicked" />

            <Button x:Name="BtnSignUp" Text="REGISTRARSE" BackgroundColor="DarkBlue" CornerRadius="15" Clicked="BtnSignUp_Clicked" />

            <Label x:Name="LblPasswordRecovery" Text="Recuperar Contraseña..." TextColor="#EBDFDF"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>